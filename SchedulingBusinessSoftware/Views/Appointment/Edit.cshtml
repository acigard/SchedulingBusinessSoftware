@model AppointmentViewModel

@*@{
    ViewData["Title"] = "Edit Appointment";
}
*@

<div class="form-group">
    <input asp-for="Title" class="form-control" value="@Model.Title" disabled>
</div>
<div class="form-group">
    <input asp-for="Type" class="form-control" value="@Model.Type" disabled>
</div>
<div class="form-group">
    <input asp-for="Description" class="form-control" value="@Model.Description">
</div>
<div class="form-group">
    Scheduled At: <input class="form-control" asp-for="@Model.ScheduledAt" asp-format="{0:yyyy-MM-ddTHH:mm}" />
    </div>
<div class="form-group">
    Created At: <input class="form-control" asp-for="@Model.CreatedAt" asp-format="{0:yyyy-MM-ddTHH:mm}" />
</div>
